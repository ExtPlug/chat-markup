{
  "name": "extplug-chat-markup",
  "version": "1.0.0",
  "license": "MIT",
  "description": "ExtPlug plugin that applies some markdown/slack/reddit-like markup to chat messages.",
  "repository": "extplug/chat-markup",
  "main": "build/chat-markup.js",
  "files": [
    "build",
    "src"
  ],
  "keywords": [
    "extplug-plugin"
  ],
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-register": "^6.22.0",
    "extplug-cli": "^1.2.0"
  },
  "scripts": {
    "build": "extplug bundle src/main.js build/chat-markup.js",
    "test": "ava"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "source": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
